<UserControl x:Class="StudentManagement.Component.Transcript.DiemItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.Component.Transcript"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="240" Height="50">
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{StaticResource textblock_item}" FontWeight="SemiBold" Text="{Binding MalktNavigation.Tenloaikiemtra, FallbackValue='Điểm thành phần' }" Width="110"></TextBlock>
            <TextBox Style="{StaticResource textbox_item}" Text="{Binding Diem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="100"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="StudentManagement.Component.ListClass.ClassStudentsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.Component.ListClass"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border  CornerRadius="20" Background="white" Margin="20">
        <Grid>
            <TextBlock 
                        FontWeight="Bold"
                        FontSize="20"
                        Height="30"
                        VerticalAlignment="Top"
                        Margin="20"
                        >
                <TextBlock.Text>
                    <MultiBinding StringFormat="Lớp: {0}">
                        <Binding Path="ChoosenClass.Name"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <StackPanel 
                            Orientation="Vertical" 
                            VerticalAlignment="Top" 
                            Margin="20 60 20 0">
                <ItemsControl ItemsSource="{Binding Students}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel x:Name="Container" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:StudentCardWithDelete Margin="0, 10, 0, 0"></local:StudentCardWithDelete>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <Button
                    Margin="20 20"
                    Height="40"
                    Command="{Binding ShowNewStudentsCommand}"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Background="{StaticResource GreenPrimary}"
                    Style="{StaticResource primary_button}">
                <TextBlock Text="Học sinh mới" />
            </Button>
        </Grid>
    </Border>
</UserControl>

